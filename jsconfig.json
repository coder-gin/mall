{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "assets/*": ["src/assets/*"],
      "common/*": ["src/common/*"],
      "components/*": ["src/components/*"],
      "network/*": ["src/network/*"],
      "views/*": ["src/views/*"]
    },
    "module": "es6",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
